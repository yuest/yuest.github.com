html, body, div,
h1, h2, h3, h4, h5, h6, p, span,
header, article,
ul, ol, li,
dl, dt, dd,
a, img
  padding: 0;
  margin: 0;
  font-size: 100%;
header, article, aside, nav
  display: block;
img
  border: 0 none;
code
  font-family: 'Ubuntu Mono', Consolas, monospace;
ol ol, ol ul, ul ol, ul ul
  padding-left: 2em;
li
  list-style-position: inside;
body
  font-family: 'Shanti', tahoma, arial, sans, sans-serif;
  line-height: 1;
  background-color: #7B9E6A
  background-image: url(/static/css/bodybg.png)
  background-repeat: repeat;
  background-attachment: fixed;
  background-position: 0 0;
#fixed-wrap
  position: fixed;
  width: 100%;
  min-height: 300px
  top: 0;
.container
  margin: 0 auto;
  max-width: 1000px;
  position: relative;
#main-container
  margin-top: 69px;
#logo
  background: transparent url(/static/i/logo.png) no-repeat left top;
  width: 180px;
  height: 180px;
  text-indent: -200px;
  overflow: hidden;
  position: absolute;
  top: 0px;
  left: 0
body.slides #logo
  left: auto
  right: -20px
#back-to-top
  position: absolute;
  color: #fff
  text-decoration: none;
  top: -20px;
  right: 60px;
  z-index: 10;
header
  font-family: 'Signika', 'Times New Roman', serif
  padding: 21px 7px 12px 170px
  color: #fff
  z-index: 10;
  body.slides &
    padding: 21px 27px 12px 12px;
  h1
    font-size: 1.25em;
  p
    font-size: 0.875em;
    margin-top: 0.2em;
article
  position: relative;
  z-index: 100;
  line-height: 1.7;
  overflow: hidden;
  padding: 5px 25px;
  background-color: #F2F8E5
  background-color: rgba(255,255,255,0.9)
  -webkit-box-shadow: 6px 6px 2px rgba(0,0,0,0.03)
  -moz-box-shadow: 6px 6px 2px rgba(0,0,0,0.03)
  box-shadow: 6px 6px 2px rgba(0,0,0,0.03)
  margin: 0 118px;
  h1
    font-size: 1.5em;
    line-height: 1;
    margin: 1.2em 0 1em;
  h2
    margin: 1.5em 0 0.8em;
  h3
    margin: 1.2em 0 0.6em;
  h4, h5, h6
    margin: 1em 0 0.5em;
  body.slides &
    margin: 0 10px
    font-size: 150%;
    h1
      font-size: 1.5em;
      line-height: 1;
      margin: 5em 0 1em;
    h2
      margin: 3.5em 0 0.8em;
    h3
      margin: 2.5em 0 0.6em;
    h4, h5, h6
      margin: 2em 0 0.5em;
  p
    font-size: 0.8125em;
    margin: 1em 0;
aside
  z-index: 10;
  width: 100px
  position: absolute
  top: 200px
  left: 0
  nav
    font-family: 'Signika', 'Times New Roman', serif
    position: absolute;
    top: 0
    right: 0
    text-align: right;
    color: #fff
    line-height: 1.2;
    li
      margin: 0.3em 0;
      list-style: none;
      a
        color: #fff
        text-decoration: none;
        &:hover
          text-decoration: underline;
  body.slides &
    width: auto;
    position: static;
    top: auto;
    left: auto
    nav
      position: static;
      margin-top: -2px;
      padding-bottom: 6px;
      ul
        margin: 0 2px;
        overflow: hidden;
        li
          float: left;
          position: relative;
          left: -1px;
          padding: 0 10px;
          border-left: #fff 1px dotted;
          margin: 0;

#editor
  position: absolute;
  z-index: 10000;
  top: 0;
  right: 0;
  width: 600px;
  form
    width: 600px;
    textarea
      width: 600px;
      min-height: 300px;

